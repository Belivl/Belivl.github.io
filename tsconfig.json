{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "strictNullChecks": true,
    "baseUrl": "src",
	"allowJs": true,
    "paths": {
			"@src/*": ["*"],
			"@lib/*": ["lib/*"],
			"@components/*": ["components/*"],
			"@layouts/*": ["layouts/*"],
			"@styles/*": ["styles/*"],
			"@utils/*": ["utils/*"],
			"@pages/*": ["pages/*"],
			"@assets/*": ["assets/*"],
			"@locales/*": ["locales/*"]
		}
  }
}
