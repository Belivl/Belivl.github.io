<script>
  import { createGrid } from "js/gridGallery.js";
  import imagePathsPortfolio from "js/imagePaths/imagePathsPortfolio.js";

  imagePathsPortfolio.forEach((path, i) => {
    createGrid(path, i);
  });
</script>

<style lang="scss">
  .image-item3 {
    display: inline-block;
    width: 100%;
    margin-bottom: 16px;
  }

  .masonryCSS {
    display: flex;
    flex-wrap: wrap;
    gap: 36px;
    width: 100%;
  }
  .masonry-item {
    width: 100%;
    max-width: 300px;
  }
  .masonry-item img {
    width: 100%;
    max-width: 300px;
  }

  .grid-item {
    width: 400px;
    margin-bottom: 1rem;
  }

  .image-item {
    flex: 1 0 28%;
    min-width: 200px;
    cursor: zoom-in;
  }

  .image-item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 250ms cubic-bezier(0.79, 0.25, 0, 1.07);
  }

  .image-item:is(:hover, :focus) img {
    transform: scale(1.03);
  }
</style>
