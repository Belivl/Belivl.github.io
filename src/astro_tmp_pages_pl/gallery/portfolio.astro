import ButtonA from "@src/components/ui/ButtonA.astro";
import ModalGallery from "@src/components/ui/ModalGallery.astro";
import { Headlines } from "@src/consts";
let pageName = "Portfolio";
---

<Layout title={pageName}>
  <!--Modal -->
  <ModalGallery data="Portfolio" />
  <Container>
    <Headline Heading={Headlines[4].heading} Subtitle={Headlines[4].subtitle} />
    <GalleryTab />
