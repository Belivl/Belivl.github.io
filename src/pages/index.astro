---
import Container from "./../components/Container.astro";
import ChoiceLayout from "./../layouts/ChoiceLayout.astro";

import translations from "./../utils/t.ts";
const t = translations(Astro.url);

import Coin2 from "./../components/ui/Coin2.astro";

import { NAME1, NAME2 } from "./../consts";
import { DialogDemo } from "./../components/ModalGalleryShad.tsx";
---

<ChoiceLayout>
  <!-- 
  <DialogDemo client:load />
  <div class="flex gap-5">
    <ButtonA id="btnProfile1" size="md" classes="default">{NAME1}</ButtonA>
    <ButtonA id="btnProfile2" size="md" classes="default">{NAME2}</ButtonA>
  </div>-->
  <div
    id="title1"
    class="flex flex-col gap-4 justify-center items-center py-8 mb-8"
  >
    <h1 class="H1">{t.index_choice}</h1>
    <h2 class="H5 text-grey-75 uppercase text-center">
      {t.index_choiceDesc}
    </h2>
  </div>
  <div
    class="container flex flex-col md:flex-row justify-center gap-4 md:gap-16 relative"
  >
    <div
      id="star"
      class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2"
    >
      <img id="star1" src="/Star1.svg" alt="Star" class="hidden starAnim" />
    </div>

    <div
      id="coinDIV1"
      class="flex flex-col justify-center items-center gap-0 md:gap-10 w-full md:w-1/3"
    >
      <div
        id="coin1"
        class="profileBelial h-[180px] sm:h-auto scale-[50%] sm:scale-75 md:scale-100 hover:scale-80 md:hover:scale-105 transition ease-out"
      >
        <Coin2>
          <img src="images/logo.png" alt="Front" class="w-full md:w-[300px]" />
        </Coin2>
      </div>
      <div
        id="coinDesc1"
        class="flex flex-col justify-center items-center gap-0 md:gap-3"
      >
        <h3 class="H1 md:scale-100 scale-75 text-center uppercase">{NAME1}</h3>
        <div class="flex justify-center items-center gap-4">
          <span class="font-semibold text-[18px] uppercase text-grey-75"
            >3D</span
          >
          <span class="font-semibold text-[18px] uppercase text-grey-75"
            >art</span
          >
          <span class="font-semibold text-[18px] uppercase text-grey-75"
            >UI/UX</span
          >
          <span class="font-semibold text-[18px] uppercase text-grey-75"
            >design</span
          >
        </div>
      </div>
    </div>
    <div
      id="coinDIV2"
      class="flex flex-col justify-center items-center gap-0 md:gap-10 w-full md:w-1/3"
    >
      <div
        id="coin2"
        class="profileMichal h-[180px] sm:h-auto scale-[50%] sm:scale-75 md:scale-100 hover:scale-80 md:hover:scale-105 transition ease-out"
      >
        <Coin2>
          <img src="images/profile.jpg" alt="Front" class="w-[300px]" />
        </Coin2>
      </div>
      <div
        id="coinDesc2"
        class="flex flex-col justify-center items-center gap-0 md:gap-3"
      >
        <h3 class="H1 md:scale-100 scale-75 text-center uppercase">{NAME2}</h3>
        <div class="flex justify-center items-center gap-4">
          <span class="font-semibold text-[18px] uppercase text-grey-75"
            >{t.index_photo}</span
          >
          <span class="font-semibold text-[18px] uppercase text-grey-75"
            >{t.index_video}</span
          >
        </div>
      </div>
    </div>
  </div>
  <Container class="pt-16 hidden">
    <!-- Profile Selection -->
    <div class="flex gap-3">
      <button
        id="profileButton1"
        class="p-2 bg-gray-800 rounded-md profile-button"
        data-profile="Belial">Belial</button
      >
      <button
        id="profileButton2"
        class="p-2 bg-gray-800 rounded-md profile-button"
        data-profile="Michal">Michal</button
      >
    </div>
    <div>
      <span id="socialLink"></span>
    </div>
    <!--<span set:html={t.home_description} /> -->
  </Container>
</ChoiceLayout>
<script>
  const dialogBtn = document.querySelector("#dialogShad");
</script>
<script src="js/profileSelector.ts"></script>
