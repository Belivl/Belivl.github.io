---
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import { ViewTransitions } from "astro:transitions";
import { getLocale } from "astro-i18n-aut";
const locale = getLocale(Astro.url);
import bgPic from "../assets/FilmGrainS5.jpg";
---

<html lang={locale} class="dark">
  <head>
    <BaseHead
      title="Portfolio Choice"
      description="Enter desired portfolio site"
      image=""
    />
    <ViewTransitions />
  </head>
  <body class="bg-grey-500">
    <!--Background image -->
    <div class="bgColor bg-light dark:bg-grey-500 fixed w-full h-full -z-50">
    </div>
    <img src={bgPic.src} alt="X" class="mainBG" />
    <img
      src="/FlameSide.svg"
      alt="Y"
      class="mainBG2 fixed top-1/2 -translate-y-1/2 left-0 scale-50 md:scale-100 origin-left"
      style="z-index: -10;"
    />
    <img
      src="/FlameSide.svg"
      alt="Y"
      class="mainBG2 fixed top-1/2 -translate-y-1/2 right-0 rotate-180 scale-50 md:scale-100 origin-left translate-x-[100%]"
      style="z-index: -10;"
    />
    <div>
      <main id="main" class="w-full p-4 h-[100vh]">
        <div class="container mx-auto">
          <div>
            <h1>Testing Api</h1>
            <div>
              <img
                src="https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/1.png"
                alt="Pikachu"
                id="pikachuImg"
              />
            </div>
          </div>
          <h2>Parent 1:</h2>
          <div id="parent1" class="pokemon-container"></div>
          <h2>Parent 2:</h2>
          <div id="parent2" class="pokemon-container"></div>
          <h2>Egg:</h2>
          <div id="egg" class="pokemon-container">
            <img src="/egg.png" alt="Egg" id="eggImg" />
          </div>
          <h2>Hatched Pokémon:</h2>
          <div id="hatchedPokemon" class="pokemon-container"></div>
          <button id="breedButton">Breed Pokémon</button>
        </div>
      </main>
      <Footer />

      <script src="./../js/pokemon.js"></script>

      <style>
        html,
        body {
          height: 100dvh;
        }
        body {
          height: 100dvh;
          display: grid;
          margin-inline: auto;
        }
      </style>
    </div>
    <style>
      body {
        font-family: Arial, sans-serif;
        background-color: #f0f0f0;
        margin: 0;
        padding: 20px;
      }

      h2 {
        font-size: 24px;
        margin-top: 20px;
      }

      button {
        padding: 10px 20px;
        font-size: 18px;
        background-color: #4caf50;
        color: white;
        border: none;
        cursor: pointer;
        margin-top: 20px;
      }

      button:hover {
        background-color: #45a049;
      }

      .container {
        display: flex;
        justify-content: space-around;
        margin-top: 20px;
      }

      .pokemon-container {
        text-align: center;
      }

      .pokemon-container img {
        width: 150px;
        height: 150px;
        margin-bottom: 10px;
      }

      .pokemon-info {
        background-color: #fff;
        padding: 10px;
        border-radius: 5px;
        box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.1);
      }

      #egg img {
        width: 100px;
        height: 100px;
        margin-bottom: 10px;
      }
      /* CSS styles from previous example */

      #eggCrack {
        display: none;
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-image: url("crack.png"); /* Image of the egg cracking */
        background-size: cover;
        animation: crackAnimation 1s steps(5) forwards;
      }

      @keyframes crackAnimation {
        0% {
          background-position: 0% 0%;
        }
        100% {
          background-position: 100% 0%;
        }
      }
      @keyframes shakeAnimation {
        0% {
          transform: rotate(0deg);
        }
        25% {
          transform: rotate(-10deg);
        }
        50% {
          transform: rotate(10deg);
        }
        75% {
          transform: rotate(-10deg);
        }
        100% {
          transform: rotate(0deg);
        }
      }
    </style>
  </body>
</html>
