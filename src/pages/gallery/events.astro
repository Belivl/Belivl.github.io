---
import Layout from "../../layouts/Layout.astro";
import ModalGallery from "../../components/ui/ModalGallery.astro";
import Container from "../../components/Container.astro";
import Headline from "../../components/Headline.astro";
import { Headlines, NAME2 } from "../../consts";
import imagePathsEvents from "../../js/imagePaths/imagePathsEvents";
import { Image } from "astro:assets";
import GalleryTab from "../../components/GalleryTab.astro";
import NavbarMJ from "../../components/NavbarMJ.astro";
import FooterMJ from "../../components/FooterMJ.astro";
let pageName = "Events";
---

<Layout title={`${NAME2} - ${pageName}`}>
  <!--Modal -->
  <ModalGallery data="Events" />
  <Container>
    <NavbarMJ />
    <Headline Heading={Headlines[7].heading} Subtitle={Headlines[7].subtitle} />
    <GalleryTab />
    <div class="gap-9" style="
  columns: 3 300px;
  column-gap: 1rem;">
      {
        imagePathsEvents.map((image, i) => (
          <button class="grid-item mb-4" id={i.toString()}>
            <Image
              class="rounded-md  image-item4 grid place-content-center"
              src={image}
              alt={image}
              width={400}
              height={200}
              format="webp"
              quality="medium"
            />
          </button>
        ))
      }
    </div>
    <!-- 
    <div class="masonColGrid4">
      <div class="masonCol2"></div>
      <div class="masonCol2"></div>
      <div class="masonCol2"></div>
      {
        imagePathsEvents.map((image, i) => (
          <Image
            src={image}
            alt={image}
            width={400}
            height={200}
            class="image-item4 w-full inline-block"
            id={i.toString()}
          />
        ))
      }
    </div>
    <div class="masonGrid3 w-full">
      <div class="masonCol"></div>
      <div class="masonCol"></div>
      <div class="masonCol"></div>
    </div>-->
    <FooterMJ />
  </Container>
</Layout>
