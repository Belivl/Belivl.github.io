---
import Layout from "../../layouts/Layout.astro";
import ModalGallery from "../../components/ui/ModalGallery.astro";
import Container from "../../components/Container.astro";
import Headline from "../../components/Headline.astro";
import { Headlines, NAME2 } from "../../consts";
import imagePathsPortfolio from "../../js/imagePaths/imagePathsPortfolio.js";
import { Image } from "astro:assets";
import GalleryTab from "../../components/GalleryTab.astro";
import NavbarMJ from "../../components/NavbarMJ.astro";
import FooterMJ from "../../components/FooterMJ.astro";
import { Button } from "../../components/ui/button";
let pageName = "Portfolio";
---

<Layout title={`${NAME2} - ${pageName}`}>
  <!--Modal -->
  <ModalGallery data="Portfolio" />
  <Container>
    <NavbarMJ />
    <Headline Heading={Headlines[4].heading} Subtitle={Headlines[4].subtitle} />
    <GalleryTab />
    <div class="H5 text-red-800 mb-8 flex gap-4 items-center justify-start">
      <Button variant="outline" size="icon" id="reloadBTN">R</Button>
      Reload the page if images dont show up / you cant click to view
    </div>
    <div class="gap-9" style="
  columns: 3 300px;
  column-gap: 1rem;">
      {
        imagePathsPortfolio.map((image, i) => (
          <button class="grid-item mb-4" id={i.toString()}>
            <Image
              class="rounded-md  image-item4 grid place-content-center"
              src={image}
              alt={image}
              width={400}
              height={200}
              format="webp"
              quality="low"
            />
          </button>
        ))
      }
    </div>
    <!-- 
    <div class="masonGrid3 w-full">
      <div id="masonCol1" class="masonCol"></div>
      <div id="masonCol2" class="masonCol"></div>
      <div id="masonCol3" class="masonCol"></div>
    </div>-->
    <FooterMJ />
  </Container><!-- 
  <section class="mx-auto container px-0 flex flex-col gap-16 py-8">
    
    <GalleryTabs active="portfolio" />-->

  <!--
    <Pagination
      prevUrl={page.url.prev}
      nextUrl={page.url.next}
      length={page.lastPage}
      currentUrl={page.url.current}
      currentPage={page.currentPage}
      firstUrl={`/${firstPath}`}
      lastUrl={`/${firstPath}/${page.lastPage}`}
    /> -->
</Layout>

<script>
  const reloadBTN = document.querySelector("#reloadBTN") as HTMLButtonElement;
  reloadBTN.addEventListener("click", () => {
    location.reload();
  });
</script>

