---
import { Icon } from "astro-icon/components";
const { text = "Default Title", link, logo = "icon" } = Astro.props;
var logoName = "default";
switch (logo) {
  case "instagram":
    logoName = "insta";
  case "facebook":
    logoName = "fb";
  default:
    logoName = "Icon";
}
---

<a class="socialWrapper" href={link} target="_blank">
  <div class="flex gap-4 justify-center items-center">
    <slot />
    <h4 class="H4">{text}</h4>
  </div>
  <!-- 
  <Icon name="Star1" class="w-12 h-12" />-->
  <svg
    class="w-12 h-12 arrowLink"
    viewBox="0 0 24 24"
    xmlns="http://www.w3.org/2000/svg"
  >
    <path
      class="iconLight"
      fill-rule="evenodd"
      clip-rule="evenodd"
      d="M12.3431 4.92893L18.7071 11.2929C19.0976 11.6834 19.0976 12.3166 18.7071 12.7071L12.3431 19.0711C11.9526 19.4616 11.3195 19.4616 10.9289 19.0711C10.5384 18.6805 10.5384 18.0474 10.9289 17.6568L15.5858 13L5 13C4.44772 13 4 12.5523 4 12C4 11.4477 4.44772 11 5 11L15.5858 11L10.9289 6.34314C10.5384 5.95261 10.5384 5.31945 10.9289 4.92893C11.3195 4.5384 11.9526 4.5384 12.3431 4.92893Z"
    ></path>
  </svg>
</a>

<style lang="scss">
  .socialWrapper {
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    padding: 16px;
    flex-grow: 1;
    gap: 16px;
    background: var(--grey-500);
    border: 1px solid var(--grey-200);
    border-radius: 8px;
    transition:
      background 0.3s,
      border 0.3s;
    transition-timing-function: ease-out;
    &:hover {
      background: var(--grey-300);
      border: 1px solid var(--light);
      transition:
        background 0.3s,
        border 0.3s;
      transition-timing-function: ease-out;
    }
    &:hover > .arrowLink {
      opacity: 1;
      transition: opacity 0.3s;
      transition-timing-function: ease-out;
    }
    .arrowLink {
      opacity: 0;
      transition: opacity 0.3s;
      transition-timing-function: ease-out;
    }
  }
</style>
