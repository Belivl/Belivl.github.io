---
//AmandelMilch
import { Image } from "astro:assets";
import Headline from "../../../components/Headline.astro";
import { amandelPath } from "../../../js/imagePaths/projectPaths.js";
---

<div class="flex flex-col gap-9 rounded-md w-full">
  <div class="h-[420px] w-full overflow-clip relative rounded-3xl">
    <Image
      src={amandelPath[0].src}
      alt={amandelPath[0].alt}
      width={600}
      height={200}
      class="rounded-xl absolute left-1/2 right-1/2 top-1/2 bottom-1/2 -translate-x-1/2 -translate-y-1/2 w-full border border-grey-300 bg-grey-400 grid place-items-center"
    />
  </div>

  <Headline Heading="Designs" Subtitle="Final" />
  <div class="grid grid-cols-1 md:grid-cols-2 gap-8 w-full">
    {
      amandelPath
        .slice(1, 7)
        .map((item) => (
          <Image
            src={item.src}
            alt={item.alt}
            width={600}
            height={200}
            class="rounded-xl w-full border border-grey-300 bg-grey-400 grid place-items-center"
          />
        ))
    }
  </div>
  <Headline Heading="Variations" Subtitle="Other" />
  <div class="grid grid-cols-1 md:grid-cols-2 gap-8 w-full">
    {
      amandelPath
        .slice(7)
        .map((item) => (
          <Image
            src={item.src}
            alt={item.alt}
            width={600}
            height={200}
            class="rounded-xl w-full border border-grey-300 bg-grey-400 grid place-items-center"
          />
        ))
    }
  </div>
</div>
