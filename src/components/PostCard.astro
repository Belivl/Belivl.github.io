---
import { Image } from "astro:assets";
//utils
//import { slugify, formatDate } from "../js/utils.js";
import ButtonA from "@components/ui/ButtonA.astro";
import type { CollectionEntry } from "astro:content";

type Props = { post: CollectionEntry<"blog"> };

const { post } = Astro.props;
const { title, cover, coverAlt } = post.data;
---

<article
  class="card border-[#434347] relative border rounded-xl overflow-hidden ring-offset-background hover:border-white transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50"
>
  <a href="" class="w-[720px] h-[240px] bg-gray-700">
    <div class="absolute top-0 left-0 right-0 -z-20">
      <Image src={cover} alt={coverAlt} width={720} height={320} />
    </div>
    <div class="w-[720px] h-[240px] bg-none"></div>
  </a>
  <div
    class="cardContent flex justify-between items-end p-5 border-[#434347] bg-grey-500"
  >
    <div class="flex flex-col gap-2">
      <a href={`/portfolio/${post.slug}`}
        ><h3 class="H5 text-xl font-semibold leading-none tracking-tight">
          {title}
        </h3></a
      >
      <a
        href={`/category/type}/`}
        class="font-semibold uppercase text-sm text-muted-foreground">type</a
      >
    </div>
    <a href={`/portfolio/${post.slug}`}
      ><ButtonA size="sm" classes="primary px-4">View</ButtonA></a
    >
  </div>
</article>

<script>
  export default {
    props: ["title", "date", "category"],
  };
</script>

<style lang="scss">
  img {
    border-radius: 0%;
  }
</style>
